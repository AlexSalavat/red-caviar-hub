{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "vite-env.d.ts", "env.d.ts"],
  "exclude": ["node_modules", "dist", "audit-*", "*.zip", "*.bak*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
